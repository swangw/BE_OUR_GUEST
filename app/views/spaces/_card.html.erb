<div class="cards">
  <% spaces.each do |space| %>
    <div class="card-space">
      <% if space.photos.attached? %>
        <%= cl_image_tag space.photos[0].key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
      <% else %>
        <img src='<%= space.images[0] %>' class="card-img-top" alt="hotel-lounge">
      <% end %>
      <% if host %>
        <%= link_to host_space_path(host, space), method: :delete, data: {confirm: "Are you sure you want to remove this space?"} do %>
          <i class="far fa-times-circle btn-delete"></i>
        <% end %>
      <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= space.name %></h5>
          <p class="card-text"><%= space.address %></p>
          <p class="card-text font-weight-bold">$<%= space.price_per_hour %>/hour</p>
          <% if host %>
            <%= link_to "Edit this space", edit_host_space_path(host, space), class: "btn btn-ghost mt-3" %>
          <% else %>
            <%= link_to "Book this space", space_path(space), class: "btn btn-ghost mt-3" %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
