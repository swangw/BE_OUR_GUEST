<div class="text-center">
  <% if host_signed_in? %>
    <h2>Booking is confirmed</h2>
  <% else %>
    <h2>Your booking is confirmed!</h2>
  <% end %>
  <img src='https://source.unsplash.com/1600x900/?hotel-lounge <%= @booking.space.id %>' class="w-75 mb-3" alt="hotel-lounge">
  <div class="mb-3">
  <% if host_signed_in? %>
    <h3><%= @booking.client_name %> has booked <%= @booking.space.name %></h3>
  <% else %>
    <h3>You have booked <%= @booking.space.name %></h3>
  <% end %>
  <h3>for <%= @booking.start_time.strftime('%A, %b %d') %> from <%= @booking.start_time.strftime('%I:%M %p') %> till <%= @booking.end_time.strftime('%I:%M %p') %></h3>
  </div>
  <% unless host_signed_in? %>
    <h5 class="mb-3">You will be charged $<%= ((@booking.end_time - @booking.start_time) / 3600 * @booking.space.price_per_hour).round %>.</h5>
    <p class="mb-0">A confirmation email and invoice will be sent to you shortly.</p>
    <p>Thank you for using <em>Be Our Guest</em>, <%= @booking.client_name %> <i class="far fa-laugh-beam"></i></p>
  <% end %>
</div>
